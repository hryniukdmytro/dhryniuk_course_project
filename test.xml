<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cucumber Tests">
    <test name="API Tests">
        <classes>
            <class name="course_project.runners.apiTestRunner.APITestRunner"/>
        </classes>
    </test>
    <test name="[Chrome] UI Tests">
        <parameter name="Browser" value="Chrome"/>
        <classes>
            <class name="course_project.runners.uiRunners.chrome.UITestRunnerChrome"/>
        </classes>
    </test>
    <test name="[Chrome] Rerun failed UI Tests">
        <parameter name="Browser" value="Chrome"/>
        <classes>
            <class name="course_project.runners.uiRunners.chrome.RerunTestRunnerChrome"/>
        </classes>
    </test>
    <test name="[Chrome Headless] UI Tests">
        <parameter name="Browser" value="ChromeHeadless"/>
        <classes>
            <class name="course_project.runners.uiRunners.chromeHeadless.UITestRunnerChromeHeadless"/>
        </classes>
    </test>
    <test name="[Chrome Headless] Rerun failed UI Tests">
        <parameter name="Browser" value="ChromeHeadless"/>
        <classes>
            <class name="course_project.runners.uiRunners.chromeHeadless.RerunTestRunnerChromeHeadless"/>
        </classes>
    </test>
    <test name="[Firefox] UI Tests">
        <parameter name="Browser" value="Firefox"/>
        <classes>
            <class name="course_project.runners.uiRunners.firefox.UITestRunnerFirefox"/>
        </classes>
    </test>
    <test name="[Firefox] Rerun failed UI Tests">
        <parameter name="Browser" value="Firefox"/>
        <classes>
            <class name="course_project.runners.uiRunners.firefox.RerunTestRunnerFirefox"/>
        </classes>
    </test>
</suite>
