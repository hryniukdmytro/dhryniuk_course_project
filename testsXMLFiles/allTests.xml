<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Tests">
    <test name="API Tests">
        <classes>
            <class name="course_project.runners.apiRunners.allFeatures.APITestRunner"/>
        </classes>
    </test>
    <test name="[Chrome] UI Tests">
        <parameter name="Browser" value="Chrome"/>
        <classes>
            <class name="course_project.runners.uiRunners.allFeatures.TestRunnerChrome"/>
        </classes>
    </test>
    <test name="[Chrome Headless] UI Tests">
        <parameter name="Browser" value="ChromeHeadless"/>
        <classes>
            <class name="course_project.runners.uiRunners.allFeatures.TestRunnerChromeHeadless"/>
        </classes>
    </test>
    <test name="[Firefox] UI Tests">
        <parameter name="Browser" value="Firefox"/>
        <classes>
            <class name="course_project.runners.uiRunners.allFeatures.TestRunnerFirefox"/>
        </classes>
    </test>
    <test name="[Chrome] Rerun failed UI Tests">
        <parameter name="Browser" value="Chrome"/>
        <classes>
            <class name="course_project.runners.uiRunners.retryFailed.RerunTestRunnerChrome"/>
        </classes>
    </test>
    <test name="[Chrome Headless] Rerun failed UI Tests">
        <parameter name="Browser" value="ChromeHeadless"/>
        <classes>
            <class name="course_project.runners.uiRunners.retryFailed.RerunTestRunnerChromeHeadless"/>
        </classes>
    </test>
    <test name="[Firefox] Rerun failed UI Tests">
        <parameter name="Browser" value="Firefox"/>
        <classes>
            <class name="course_project.runners.uiRunners.retryFailed.RerunTestRunnerFirefox"/>
        </classes>
    </test>
</suite>
